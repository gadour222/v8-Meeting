                        </li>
                        {%endif%}
                    {% endfor %}
                </ul>
            </div>
            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    {% for offer in offers %}
                    {% if offer.mentor == mentor.id%}
                        <div class="tab-pane {% if loop.first %}active show{% endif %}" id="tab-{{ loop.index }}">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <p>duration:</p>
                                    <h3>{{ offer.duration }} Min</h3>
                                    <p>price:</p>
                                    <h3>{{ offer.price }} $</h3>
                                    <p>{{ offer.description }}</p>
                                </div>
                            </div>
                        </div>
                        {%endif%}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section><!-- End Specials Section -->

<div class="section-title">
    <h2>Check Mentor's<span>  Reviews</span></h2>
     
</div>

<section><!-- feedback -->
    <div class="container"style="width: 620px; height: 100px; margin-bottom: 120px;">
        <div class="row justify-content-center" >
          <div class="col-md-10"> <!-- Vous pouvez ajuster la largeur en modifiant col-md-X -->
            <div class="card">
              <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
            

        <div style="background-color: #D6DBDF ; padding: 10px; overflow-y: auto; max-height: 200px; width: 450px; height: 100px;">

        {% for commentaire in commentaires %}
        <div>
            <p> => {{ commentaire.commentaire }}</p>
        </div>
        {% endfor %}
    
    
    </div>
    
    {{ form_start(form) }}

    <div class="commentaire-input d-flex align-items-start">
        
        {{ form_row(form.Commentaire, {'label': false}) }}      <!-- false pour supprimer le label -->

        <button type="submit" class="ml-2">Valider</button>
    </div>

    <br>
    {{ form_row(form.Note) }}
    
    <div class="stars d-flex justify-content-center align-items-center">
        <h1>
        {% for i in 1..5 %}
            
         
            <i class="fa-sharp fa-regular fa-star fa-flip-horizontal" data-value="{{ i }}"></i>

            
        {% endfor %}
        </h1>
    </div>
    
    {{ form_end(form) }}
    


    </div>
</div>
</div>

</div>
</div>



<script>
    window.onload = () => {
        const stars = document.querySelectorAll(".fa-sharp.fa-regular.fa-star.fa-flip-horizontal");
        const note = document.querySelector("#{{ form.Note.vars.id }}");

        for(star of stars){
            star.addEventListener("mouseover", function(){
                resetStars();
                this.style.color = "#FFD43B";
                this.classList.add("las");
                this.classList.remove("lar");
                let previousStar = this.previousElementSibling;

                while(previousStar){
                    previousStar.style.color = "#FFD43B";
                    previousStar.classList.add("las");
                    previousStar.classList.remove("lar");
                    previousStar = previousStar.previousElementSibling;
                }
            });

            star.addEventListener("click", function(){
                note.value = this.dataset.value;
            });

            star.addEventListener("mouseout", function(){
                resetStars(note.value);
            });
        }

        function resetStars(note = 0){
            for(star of stars){
                if(star.dataset.value > note){
                    star.style.color = "black";
                    star.classList.add("lar");
                    star.classList.remove("las");
                }else{
                    star.style.color = "#FFD43B";
                    star.classList.add("las");
                    star.classList.remove("lar");
                }
            }
        }     
    }
</script>


</section><!-- feedback -->
    
{% endblock %}
