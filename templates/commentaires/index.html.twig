  <section id="specials" class="specials">
    <div class="container">
        <br><br><br>
        <div class="section-title">
            <h2>Check Mentor's <span>Offers</span></h2>
        </div>
        
        <div class="row">
            <div class="col-lg-3">
                <ul class="nav flex-column">
